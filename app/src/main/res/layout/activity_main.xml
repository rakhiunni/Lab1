<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/score1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/score1_dec"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="20dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/score1_label"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/score1_inc"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toEndOf="@+id/score1_dec"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="@string/score2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score1_label" />

    <Button
        android:id="@+id/score2_dec"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="324dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/score2_label" />

    <Button
        android:id="@+id/score2_inc"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginBottom="324dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toEndOf="@+id/score2_dec" />

    <TextView
        android:id="@+id/score1_value"
        android:layout_width="38dp"
        android:layout_height="22dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/score1_dec"
        app:layout_constraintStart_toEndOf="@+id/score1_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score2_value"
        android:layout_width="38dp"
        android:layout_height="22dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="331dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/score2_dec"
        app:layout_constraintStart_toEndOf="@+id/score2_label" />
</androidx.constraintlayout.widget.ConstraintLayout>